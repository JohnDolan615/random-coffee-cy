{
  "name": "random-coffee",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/next & npm run dev --workspace=apps/bot",
    "build": "node build.js",
    "build:all": "node build.js && npm run build --workspace=apps/bot",
    "build:shared": "npm run build --workspace=packages/shared",
    "deploy": "prisma migrate deploy && prisma generate",
    "migrate": "prisma migrate dev",
    "seed": "ts-node prisma/seed.ts",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "prisma": "^5.8.1"
  }
}
